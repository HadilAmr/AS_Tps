<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0808"
    android:foregroundTint="#BC7575"
    tools:context=".MainActivity2"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-22dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#FFFF"
            app:hintTextAppearance="@style/CustomHintTextStyle"
            app:hintTextColor="#FF9800">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Login"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/edit_textbg"
                android:drawableStart="@drawable/baseline_person_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/berlin_sans_fb"
                android:hint="Login"
                android:paddingLeft="8dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#FFFF"
            app:hintTextAppearance="@style/CustomHintTextStyle"
            app:hintTextColor="#FF9800">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Pwd"
                android:layout_width="match_parent"
                android:layout_height="54dp"

                android:background="@drawable/edit_textbg"
                android:drawableStart="@drawable/baseline_password_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/berlin_sans_fb"
                android:hint="Password"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:password="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/berlin_sans_fb"
        android:text="LOGIN"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="4dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="#5A595B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RemoveUser"
        app:srcCompat="@drawable/baseline_person_add_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/RemoveUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="36dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="#5A595B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login"
        app:srcCompat="@drawable/baseline_person_remove_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:clickable="true"
        app:backgroundTint="#5A595B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddUser"
        app:srcCompat="@drawable/baseline_add_24" />

    <TextView
        android:id="@+id/RemoveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/berlin_sans_fb"
        android:text="Remove User"
        android:textColor="#FF9800"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/RemoveUser"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <TextView
        android:id="@+id/AddText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/berlin_sans_fb"
        android:text="Add user"
        android:textColor="#FF9800"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/AddUser"
        app:layout_constraintTop_toBottomOf="@+id/RemoveText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/berlin_sans_fb"
        android:text="LOGIN"
        android:textColor="#FF5722"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="______________"
        android:textColor="#FF9800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="________________"
        android:textColor="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/berlin_sans_fb"
        android:text="Sign In with others"
        android:textColor="#FF9800"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <Button
        android:id="@+id/signInWithGoogle"
        android:layout_width="224dp"
        android:layout_height="36dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/signinothers"
        android:fontFamily="@font/berlin_sans_fb"
        android:text="     Sign In with Google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="27dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@+id/signInWithGoogle"
        app:layout_constraintTop_toTopOf="@+id/signInWithGoogle"
        app:srcCompat="@drawable/chercher" />

</androidx.constraintlayout.widget.ConstraintLayout>