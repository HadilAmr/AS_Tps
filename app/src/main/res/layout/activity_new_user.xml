<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0808"
    tools:context=".NewUser">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#FFFF"
            app:hintTextAppearance="@style/CustomHintTextStyle"
            app:hintTextColor="#FF9800">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/edit_textbg"
                android:drawableStart="@drawable/baseline_person_add_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/berlin_sans_fb"
                android:hint="Login"
                android:paddingLeft="8dp"
                android:textSize="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#FFFF"
            app:hintTextAppearance="@style/CustomHintTextStyle"
            app:hintTextColor="#FF9800">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mdp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/edit_textbg"
                android:drawableStart="@drawable/baseline_password_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/berlin_sans_fb"
                android:hint="Password"
                android:paddingLeft="8dp"
                android:password="true"
                android:textSize="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#FFFF"
            app:hintTextAppearance="@style/CustomHintTextStyle"
            app:hintTextColor="#FF9800">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/edit_textbg"
                android:drawableStart="@drawable/baseline_format_color_text_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/berlin_sans_fb"
                android:hint="Last Name"
                android:paddingLeft="8dp"
                android:textSize="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#FFFF"
            app:hintTextAppearance="@style/CustomHintTextStyle"
            app:hintTextColor="#FF9800">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/prÃ©nom"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/edit_textbg"
                android:drawableStart="@drawable/baseline_format_color_text_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/berlin_sans_fb"
                android:hint="First Name"
                android:paddingLeft="8dp"
                android:textSize="20dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Ajouter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/berlin_sans_fb"
        android:text="Add user"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/berlin_sans_fb"
        android:text="SIGN UP"
        android:textColor="#FF5722"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>